 
<table class="table table-hover table-striped table-condensed">
    <thead>
        <tr>
            <th></th>
            <th>Identificación</th>
            <th>Nombre</th>
            <th>Correo Electrónico</th>
            <th>Fecha de Registro</th>
            <th>Estado</th>            
        </tr>
    </thead>
    <tbody>
        {%for usuario in usuarios %}
        <tr>
            <td>
                <input type="radio" name="radioUsuario" id="radioUsuario" value="{{ usuario.numerodocumentoidentidad }}" required="true">
            </td>
            <td>
                {{ usuario.numerodocumentoidentidad }} 
            </td>
            <td>
               {{ usuario.primernombre }} {{ usuario.segundonombre }} {{ usuario.primerapellido }} {{ usuario.segundoapellido }} 
            </td>
            <td>
                {{ usuario.user.email }}
            </td>
            <td>
                {{ usuario.fecharegistro  | date('d-m-y') }}
            </td>
            <td>
                {% if usuario.user.enabled  %} 
                Activo
                {% else %} 
                Inactivo
                {% endif %} 
            </td>               
        </tr>
        {% endfor %}
         
    </tbody>
</table>
