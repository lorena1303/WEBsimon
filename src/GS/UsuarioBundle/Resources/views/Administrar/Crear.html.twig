        {{ form_label(formUsuario.email.first) }} <br>
        {{ form_errors(formUsuario.email.first) }}
        {{ form_widget(formUsuario.email.first) }}
            <br>
        {{ form_label(formUsuario.email.second) }} <br>
        {{ form_errors(formUsuario.email.second) }}
        {{ form_widget(formUsuario.email.second) }}

            <br>
        {{ form_label(formUsuario.enable) }} <br>
        {{ form_errors(formUsuario.enable) }}
        {{ form_widget(formUsuario.enable) }}
        </div>
        <div class="col-xs-6 col-md-4">
        </div>
    </div>
       {{ form_rest(formUsuario) }}
    <br>
</form>
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
    var x;
    x = $(document);
    x.ready(inicializarEventos);


    function inicializarEventos() {

        var btn;
        btn = $('#botonGuardar');
        btn.click(enviarFormulario)
    }
    function enviarFormulario() {
        var frm;
        frm = $('#formulario');
        frm.submit();
    }
</script>
{% endblock %}